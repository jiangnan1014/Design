/**index.wxss**/
.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  .userinfo-avatar {
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx;
    border-radius: 50%;
  }
  
  .userinfo-nickname {
    color: #aaa;
  }
  
  .usermotto {
    margin-top: 100px;
    padding: 0 30rpx;
  }
  .user-motto{
      color: #fff;
      background: green;
      width: 150rpx;
      height: 60rpx;
      font-size: 25rpx;
  }
  .box{
    display: flex;
    align-items: center;
    margin: 30rpx 0;
    border-bottom: 1px solid #ebebeb;
    border-top: 1px solid #ebebeb;
  }
  .bottom{
    display: flex;
    align-items: center;
  }
  .namea{
    font-size: 24rpx;
    color: #aaa;
  }
  .bg{
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
  }
  .na{
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto;
    padding-top: 150rpx;
  }